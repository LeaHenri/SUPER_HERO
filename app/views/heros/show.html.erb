<div class="container-lg">
  <div class="row align-items-start">
    <div class="col-md-6">
      <div class="card shadow-sm mt-5">
        <%= cl_image_tag(@hero.photo.key, class: "hero-image", alt: @hero.name) %>
        <div class="card-body">
          <h5 class="card-title"><%= @hero.name %></h5>
          <p class="card-text"><strong><i class="fa-solid fa-bolt"></i></strong> <%= @hero.power %></p>
          <p class="card-text">Description: <%= @hero.description %></p>
        </div>
      </div>
    </div>


    <div class="col-md-6 d-flex flex-column justify-content-start align-items-center">
      <div data-controller="toggle" class="w-50 ms-auto">
        <button class="btn btn-primary mt-5" data-action="click->toggle#fire">Do you want to rent?</button>

        <div data-toggle-target="togglableElement" class="d-none">
          <%= simple_form_for [@hero, @booking] do |f| %>
            <%= f.input :start_date, as: :string,
                  input_html: { class: "text-white", data: { controller: "datepicker" } } %>
            <%= f.input :end_date, as: :string,
                  input_html: { class: "text-white", data: { controller: "datepicker" } } %>
            <%= f.button :submit, "Book a SuperHero", class: "btn btn-primary mt-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
