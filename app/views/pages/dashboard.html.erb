<div class="container">
  <div class="container-lg">
    <h1 class="py-2">  <i class="fa-solid fa-meteor"></i> Renter section </h1>
    <h2 class="py-2">My pending bookings</h2>
      <div class="row">
        <% @bookings.each do |booking| %>
          <div class="col-md-2 mb-3">
              <div class="medium-card shadow-sm" >
                <%= link_to cl_image_tag(booking.hero.photo.key, class: "medium-card-img px-0", alt: booking.hero.name), hero_path(booking.hero) %>
                <div class="medium-card-body">
                  <h5 class="medium-card-title m-0"><%= booking.hero.name %></h5>
                  <p class="medium-card-text m-0"><%= booking.start_date %></p>
                  <p class="medium-card-text m-0"><%= booking.status %> </p>
                </div>
              </div>
          </div>
        <% end %>
      </div>
  </div>

  <div class="mt-3 pt-3">
    <h1>Owner section</h1>

    <h2>My pending validations</h2>
    <ul>
    </ul>
    <% @bookings_owner.each do |booking| %>
      <%= booking.hero.name %>
      <%= booking.start_date %>
      <%= booking.end_date %>
      <%= booking.status %>
      <% if booking.status == "pending" %>
        <%= button_to "accept", accept_booking_path(booking), method: :patch %>
        <%= button_to "refuse", refuse_booking_path(booking), method: :patch %>
      <% end %>
    <% end %>

    <h2>My SuperHeroes</h2>
    <% @heros.each do |hero| %>
        <li class="card shadow-sm"><%= cl_image_tag(hero.photo.key, class: "mini_card hero-image", alt: hero.name) %>
        <h5 class="card-title"><%= hero.name %></h5></li>
    <% end %>
    <button class="btn btn-primary mt-5"> <%= link_to "Create a SuperHeroe",  new_hero_path, class: "text-decoration-none text-white" %> </button>
  </div>

</div>
